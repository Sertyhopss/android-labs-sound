<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/main_layout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical"
                                                   android:padding="16dp"
                                                   android:background="@drawable/gb"
                                                   tools:context=".MainActivity">

    <Button
            android:id="@+id/record_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Record" tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="93dp" app:layout_constraintEnd_toStartOf="@+id/stop_button"
            android:layout_marginEnd="20dp" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/play_button"/>

    <Button
            android:id="@+id/stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:enabled="false" tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="88dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/record_button" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/play_button"/>


    <Button
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Recording"
            android:enabled="false" tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="164dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/stop_play_button" android:layout_marginEnd="21dp"
            android:layout_marginBottom="137dp"/>
    <Button
            android:id="@+id/stop_play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Playback"
            android:enabled="false" tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="158dp" app:layout_constraintBaseline_toBaselineOf="@+id/play_button"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Chronometer
            android:id="@+id/simpleChronometer"
            android:layout_width="160dp"
            android:layout_height="64dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="352dp"
            android:layout_marginStart="124dp" android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
